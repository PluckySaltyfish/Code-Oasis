/**index.wxss**/
page{
  background-color: #e6e9ed;
}

.screen{
  background-color: #9fd568;
  height: 400rpx;
  width: 70%;
  margin-top: 200rpx;
  border: #8cc253 1rem solid;
}

.btn-container{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx;
}
.plus-btn{
  width: 200rpx;
  height: 200rpx;
  margin-right:80rpx; 
}
.start-btns{
  display:flex;
  flex-direction: column;
  flex-wrap: wrap;

  
}
.btn-row{
  flex-direction: row;
  display: flex;
}
.btn-r{
  border-radius: 50%;
  width: 100rpx;
  height: 100rpx;
  margin: 10rpx;
}
.wrap{
  background-color: transparent;
}

.start{
  background-color: #ee5564;
  border: #da4553 0.5rem solid;
}
.start:active{
  background-color: #da4553;
  border: #da4553 0.4rem solid;
}
button::after {
  width: 0;
  height: 0;
}
.re-btns{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  width: 100%;
}
.r-wrap{
  width: 200rpx;
  height: 200rpx;
}
.btn-life{
  width:100rpx;
  height:50rpx;
  border-radius: 40rpx;
  background-color: #abb2bc;
  border: #a6abad 0.2rem solid;
}

.btn-life:active{
  background-color: #8f9496;
  border: #8f9496 0.2rem solid;
}